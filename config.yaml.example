# Reading Agent Configuration
# Copy this to config.yaml and modify as needed

sources:
  - name: arXiv
    type: rss
    url: https://rss.arxiv.org/rss/cs.CV
    enabled: true
    max_articles: 50

  - name: PubMed
    type: rss
    url: https://pubmed.ncbi.nlm.nih.gov/rss/search/YOUR_SEARCH_ID/?limit=15
    enabled: true
    max_articles: 15

topics:
  - machine vision
  - computer vision
  - image recognition
  - object detection
  - deep learning

email:
  subject_prefix: "[Research Update]"
  format: html
  include_links: true
  max_articles: 10

app:
  update_frequency: "6h"
  log_level: info
  max_articles_per_source: 5
